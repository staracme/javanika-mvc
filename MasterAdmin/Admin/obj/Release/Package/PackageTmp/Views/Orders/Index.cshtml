@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<Admin.Models.tblTicketOrder>

<form id="frmEvent" style="display:none;">
    <div class="row">
        <div class="col-sm-12">
            <div class="MainHeader">Manage Orders</div>
        </div>

        <div class="col-sm-3"><div class="FormLabelStyle">Event Name</div></div>
        <div class="col-sm-5"><input type="text" class="FormTxtStyle" id="txtEventName" name="txtEventName" disabled /></div>
        <div class="col-sm-4"><div class="FormValidationStyle" id="lblEventName"></div></div>
        <div class="col-sm-12"><br /></div>

        <div class="col-sm-3"><div class="FormLabelStyle">Sr No</div></div>
        <div class="col-sm-5"><input type="text" class="FormTxtStyle" id="txtSrNo" name="txtSrNo" disabled /></div>
        <div class="col-sm-4"><div class="FormValidationStyle" id="lblEventType"></div></div>
        <div class="col-sm-12"><br /></div>


        <div class="col-sm-3"><div class="FormLabelStyle">Order ID</div></div>
        <div class="col-sm-5"><input type="text" class="FormTxtStyle" id="txtOrderID" name="txtOrderID" disabled /></div>
        <div class="col-sm-4"><div class="FormValidationStyle" id="lblEventLanguage"></div></div>
        <div class="col-sm-12"><br /></div>


        <div class="col-sm-3"><div class="FormLabelStyle">No Of Tickets</div></div>
        <div class="col-sm-5"><input type="text" class="FormTxtStyle" id="txtNoOfTickets" name="txtNoOfTickets" disabled /></div>
        <div class="col-sm-4"><div class="FormValidationStyle" id="lblEventLanguage"></div></div>
        <div class="col-sm-12"><br /></div>


        <div class="col-sm-3"><div class="FormLabelStyle">Total Amount</div></div>
        <div class="col-sm-5"><input type="text" class="FormTxtStyle" id="txtTotalAmount" name="txtTotalAmount" disabled /></div>
        <div class="col-sm-4"><div class="FormValidationStyle" id="lblEventLanguage"></div></div>
        <div class="col-sm-12"><br /></div>


        <div class="col-sm-3"><div class="FormLabelStyle">Payment Status</div></div>
        <div class="col-sm-5"><input type="text" class="FormTxtStyle" id="txtPaymentStatus" name="txtPaymentStatus" disabled /></div>
        <div class="col-sm-4"><div class="FormValidationStyle" id="lblEventLanguage"></div></div>
        <div class="col-sm-12"><br /></div>



        <div class="col-sm-3"><div class="FormLabelStyle">Order Status</div></div>
        <div class="col-sm-5"><input type="text" class="FormTxtStyle" id="txtOrderStatus" name="txtOrderStatus" disabled /></div>
        <div class="col-sm-4"><div class="FormValidationStyle" id="lblEventLanguage"></div></div>
        <div class="col-sm-12"><br /></div>

        <div class="col-sm-3"><div class="FormLabelStyle">Paypal Order ID</div></div>
        <div class="col-sm-5"><input type="text" class="FormTxtStyle" id="txtPaypalOrderID" name="txtPaypalOrderID" disabled /></div>
        <div class="col-sm-4"><div class="FormValidationStyle" id="lblEventLanguage"></div></div>
        <div class="col-sm-12"><br /></div>

    </div>
</form>


@{
    var events = (List<Admin.Models.tblEvent>)ViewData["Events"];
}

<div class="FormBlock">
    <form id="frmEvent" action="/Orders/" method="post">
        <div class="row">
            <div class="col-sm-12">
                <div class="MainHeader">Manage Orders</div>
            </div>

            <div class="col-sm-3"><div class="FormLabelStyle">Event Name</div></div>
            <div class="col-sm-5">
                <select class="FormTxtStyle" id="drpEventID" name="drpEventID">
                    <option value="">--All Events--</option>
                    @foreach (var evt in events)
                    {
                        <option value="@evt.EventID">@evt.EventName</option>
                    }
                </select>
            </div>
            <div class="col-sm-12"><br /></div>



            <div class="col-sm-12" id="block_div_3" style="display:none;">
            <div class="FormValidationStyle" id="lblEventTNC"></div></div>
            @*Event Name*@
            <div class="col-sm-3"><div class="FormLabelStyle"></div></div>
            <div class="col-sm-5">
                <button class="FormBtnStyle" type="submit" id="but_upload">Submit</button>
            </div>
            <div class="col-sm-4"><div class="FormValidationStyle"></div></div>
            <div class="col-sm-12"><br /></div>
        </div>
    </form>
</div>
<div class="FormBlock">
    <div class="row">
        <div class="col-sm-12">
            <div class="MainHeader">List of Orders</div>
        </div>
        <div class="col-sm-12">
            <div class="underline"></div>
        </div>
    </div>

    @{
        Admin.Models.JAVADBEntities db = new Admin.Models.JAVADBEntities();
    }

    <div class="row">
        <div class="col-sm-12">
            <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th><center>Sr No</center></th>
                        <th><center>Order ID</center></th>
                        <th><center>Event Name</center></th>
                        <th><center>Event Date</center></th>
                        <th><center>Name</center></th>
                        <th><center>Email</center></th>
                        <th><center>No Of Tickets</center></th>
                        <th><center>Amount</center></th>
                        <th><center>Status</center></th>
                        <th><center>Action</center></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var order in Model)
                    {
                        var evt = db.tblEvents.Where(e => e.EventID == order.EventID).SingleOrDefault();

                        <tr class="dynamic">
                            <td><center>@order.OrderNo</center></td>
                            <td><center>@order.OrderID</center></td>
                            <td><center>@(evt != null ? evt.EventName : "")</center></td>
                            <td><center>@Convert.ToDateTime(evt.EventDate).ToString("yyyy-MM-dd")</center></td>
                            <td><center>@order.Name</center></td>
                            <td><center>@order.Email</center></td>
                            <td><center>@order.NoOfTickets</center></td>
                            <td><center>@order.Amount</center></td>
                            <td><center>@order.Status</center></td>
                            <td><center><a href="JavaScript:;" onclick="GetOrder(@order.OrderID)">View</a></center></td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <button class="FormBtnStyle" type="button" 
                    onclick="JavaScript: location.href='/Orders/ExportMIS?drpEventID=@Request["drpEventID"]';" 
                    id="but_upload" style="float:right!important;">Export to excel</button>
            <img id="but_loader" src="~/App_Images/loader.gif" 
                 style="height:20px!important;width:20px!important;display:none;" />
            <br>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {

        $('#datatable').DataTable({
            "order": [[1, "asc"]]
        });

    });


    function GetOrder(orderID) {
        $.ajax({
            url: "/Orders/GetOrder",
            data: { orderID: orderID },
            type: "GET",
            success: function (response) {
                $("#frmEvent").show();

                $("#txtOrderID").val(response.OrderID);
                $("#txtEventName").val(response.EventName);
                $("#txtSrNo").val(response.SrNo);
                $("#txtNoOfTickets").val(response.NoOfTickets);
                $("#txtTotalAmount").val(response.Amount);
                $("#txtPaypalOrderID").val(response.PaypalOrderID);
                $("#txtOrderStatus").val(response.OrderStatus);
                $("#txtOrderID").val(response.OrderID);
                $("#txtPaymentStatus").val(response.PaymentStatus)
            }
        });
    }
</script>

